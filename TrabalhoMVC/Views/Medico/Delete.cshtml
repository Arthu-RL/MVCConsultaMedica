@model TrabalhoMVC.Models.Medico

@{
    ViewData["Title"] = "Excluir Médico";
}

@if (Model.Consultas != null && Model.Consultas.Any())
{
    @await Html.PartialAsync("_ImpossibleDeleteWarning", new
    {
        Tipo = "médico",
        QtdConsultas = Model.Consultas.Count(),
        Controller = "Medico"
    })
}
else
{
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h4><i class="bi bi-trash"></i> Confirmar Exclusão</h4>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i> Tem certeza que deseja excluir o médico <strong>@Model.Nome</strong>?
            </div>

            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CPF)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CPF)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CRM)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CRM)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Especialidade)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Especialidade)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Telefone)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Telefone)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Ativo)
                </dt>
                <dd class="col-sm-9">
                    @if (Model.Ativo)
                    {
                        <span class="badge bg-success">Ativo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inativo</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete" class="mt-3">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirmar Exclusão
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
}
