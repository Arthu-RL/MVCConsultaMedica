@model IEnumerable<TrabalhoMVC.Models.Paciente>

@{
    ViewData["Title"] = "Pacientes";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4><i class="bi bi-people"></i> Lista de Pacientes</h4>
    </div>
    <div class="card-body">
        <p>
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Novo Paciente
            </a>
        </p>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Nome)</th>
                        <th>@Html.DisplayNameFor(model => model.CPF)</th>
                        <th>@Html.DisplayNameFor(model => model.DataNascimento)</th>
                        <th>@Html.DisplayNameFor(model => model.Telefone)</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                            <td>@Html.DisplayFor(modelItem => item.CPF)</td>

                            <td>@Html.DisplayFor(modelItem => item.DataNascimento)</td>
                            <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white" title="Detalhes">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Excluir">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                    <a asp-action="HistoricoConsultas" asp-route-id="@item.Id" class="btn btn-success btn-sm" title="Histórico de Consultas">
                                        <i class="bi bi-clipboard2-pulse"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>