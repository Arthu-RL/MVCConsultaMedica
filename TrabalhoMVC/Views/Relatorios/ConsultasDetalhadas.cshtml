@model IEnumerable<TrabalhoMVC.Models.ConsultaMedica>

@{
    ViewData["Title"] = "Agenda do Médico";
    var medico = ViewBag.Medico as TrabalhoMVC.Models.Medico;
    var data = ViewBag.Data as DateTime?;
}

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4><i class="bi bi-calendar-check"></i> Agenda do Médico - @medico.Nome</h4>
    </div>
    <div class="card-body">
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Dados do Médico</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Nome:</dt>
                            <dd class="col-sm-8">@medico.Nome</dd>

                            <dt class="col-sm-4">CRM:</dt>
                            <dd class="col-sm-8">@medico.CRM</dd>

                            <dt class="col-sm-4">Especialidade:</dt>
                            <dd class="col-sm-8">@medico.Especialidade</dd>

                            <dt class="col-sm-4">Status:</dt>
                            <dd class="col-sm-8">
                                @if (medico.Ativo)
                                {
                                    <span class="badge bg-success">Ativo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inativo</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Selecionar Data</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="AgendaMedico" method="get" class="row g-3">
                            <input type="hidden" name="id" value="@medico.Id" />
                            <div class="col-md-8">
                                <input type="date" name="data" class="form-control" value="@data?.ToString("yyyy-MM-dd")" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="bi bi-search"></i> Filtrar
                                </button>
                            </div>
                        </form>

                        <div class="d-flex justify-content-between mt-3">
                            <a asp-action="AgendaMedico" asp-route-id="@medico.Id" asp-route-data="@data?.AddDays(-1).ToString("yyyy-MM-dd")" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Dia Anterior
                            </a>
                            <a asp-action="AgendaMedico" asp-route-id="@medico.Id" asp-route-data="@DateTime.Today.ToString("yyyy-MM-dd")" class="btn btn-outline-primary">
                                Hoje
                            </a>
                            <a asp-action="AgendaMedico" asp-route-id="@medico.Id" asp-route-data="@data?.AddDays(1).ToString("yyyy-MM-dd")" class="btn btn-outline-secondary">
                                Dia Seguinte <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <h5 class="mb-3">
            <i class="bi bi-calendar-date"></i> Consultas do dia @data?.ToString("dd/MM/yyyy") - @Model.Count() consulta(s)
        </h5>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Horário</th>
                            <th>Paciente</th>
                            <th>Status</th>
                            <th>Valor</th>
                            <th>Observações</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var consulta in Model)
                        {
                            <tr>
                                <td>@consulta.DataConsulta.ToString("HH:mm")</td>
                                <td>@consulta.Paciente.Nome</td>
                                <td>
                                    @{
                                        string badgeClass = consulta.Status switch
                                        {
                                            TrabalhoMVC.Models.StatusConsulta.Agendada => "badge bg-primary",
                                            TrabalhoMVC.Models.StatusConsulta.Confirmada => "badge bg-info",
                                            TrabalhoMVC.Models.StatusConsulta.Realizada => "badge bg-success",
                                            TrabalhoMVC.Models.StatusConsulta.Cancelada => "badge bg-danger",
                                            _ => "badge bg-secondary"
                                        };
                                    }
                                    <span class="@badgeClass">@consulta.Status</span>
                                </td>
                                <td>@(consulta.Valor.ToString("C"))</td>
                                <td>@consulta.Observacoes</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-controller="ConsultaMedica" asp-action="Edit" asp-route-id="@consulta.Id" class="btn btn-primary btn-sm" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-controller="ConsultaMedica" asp-action="Details" asp-route-id="@consulta.Id" class="btn btn-info btn-sm text-white" title="Detalhes">
                                            <i class="bi bi-info-circle"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Não há consultas agendadas para este médico na data selecionada.
            </div>
        }
    </div>
    <div class="card-footer">
        <a asp-controller="ConsultaMedica" asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Nova Consulta
        </a>
        <a asp-action="Details" asp-route-id="@medico.Id" class="btn btn-primary">
            <i class="bi bi-person-badge"></i> Detalhes do Médico
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar à Lista
        </a>
    </div>
</div>