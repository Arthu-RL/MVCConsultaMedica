@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Consultas por Período";
    var dataInicio = ViewBag.DataInicio as DateTime?;
    var dataFim = ViewBag.DataFim as DateTime?;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Consultas por Período</h2>
        <div>
            <button class="btn btn-outline-primary" onclick="window.print()">
                <i class="bi bi-printer"></i> Imprimir
            </button>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Filtro de Período</h5>
        </div>
        <div class="card-body">
            <form asp-action="ConsultasPorPeriodo" method="get" class="row g-3">
                <div class="col-md-5">
                    <label class="form-label">Data Início</label>
                    <input type="date" name="dataInicio" class="form-control"
                           value="@dataInicio?.ToString("yyyy-MM-dd")" required />
                </div>
                <div class="col-md-5">
                    <label class="form-label">Data Fim</label>
                    <input type="date" name="dataFim" class="form-control"
                           value="@dataFim?.ToString("yyyy-MM-dd")" required />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Filtrar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                Consultas no período de @dataInicio?.ToString("dd/MM/yyyy") a @dataFim?.ToString("dd/MM/yyyy")
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-primary">
                            <tr>
                                <th>ID</th>
                                <th>Data/Hora</th>
                                <th>Paciente</th>
                                <th>Médico</th>
                                <th>Especialidade</th>
                                <th>Status</th>
                                <th>Valor</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ConsultaId</td>
                                    <td>@Convert.ToDateTime(item.DataConsulta).ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@item.PacienteNome</td>
                                    <td>@item.MedicoNome</td>
                                    <td>@item.Especialidade</td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(item.Status)">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td>@string.Format("{0:C}", item.Valor)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="card border-primary">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0">Resumo do Período</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p><strong>Total de consultas:</strong> @Model.Count()</p>
                                        <p><strong>Valor total:</strong> @string.Format("{0:C}", Model.Sum(c => (decimal)c.Valor))</p>
                                    </div>
                                    <div class="col-md-6">
                                        <p><strong>Média por consulta:</strong> @string.Format("{0:C}", Model.Average(c => (decimal)c.Valor))</p>
                                        <p><strong>Período:</strong> @((dataFim?.Subtract(dataInicio.Value).Days + 1)) dias</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> Não foram encontradas consultas para o período selecionado.
                </div>
            }
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center">
            <p class="text-muted mb-0">@(Model.Any() ? $"Total de registros: {Model.Count()}" : "Nenhum registro encontrado")</p>
            <div>
                <a asp-action="ConsultasDetalhadas" class="btn btn-outline-primary">
                    <i class="bi bi-file-earmark-text"></i> Todas as Consultas
                </a>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Agendada" => "bg-primary",
            "Confirmada" => "bg-info",
            "Realizada" => "bg-success",
            "Cancelada" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}