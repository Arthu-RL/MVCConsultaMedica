@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Estatísticas por Médico";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Estatísticas por Médico</h2>
        <div>
            <button class="btn btn-outline-primary" onclick="window.print()">
                <i class="bi bi-printer"></i> Imprimir
            </button>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Estatísticas das Consultas Realizadas</h5>
        </div>
        <div class="card-body">
            <div class="alert alert-info mb-3">
                <i class="bi bi-info-circle"></i> Este relatório mostra estatísticas das consultas <strong>realizadas</strong> por cada médico.
                <br>
                <small><strong>Consulta 2:</strong> Usando funções de grupo (COUNT, SUM, AVG, MAX, MIN)</small>
            </div>

            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-6 mb-4">
                        <div class="card border-primary h-100">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">@item.MedicoNome</h5>
                                <p class="text-muted mb-0">@item.Especialidade</p>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="d-flex align-items-center mb-3">
                                            <div class="bg-primary p-3 rounded-circle me-3 text-white">
                                                <i class="bi bi-clipboard2-pulse-fill"></i>
                                            </div>
                                            <div>
                                                <h6 class="fw-normal text-muted mb-0">Total de Consultas</h6>
                                                <h4 class="mb-0">@item.TotalConsultas</h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="d-flex align-items-center mb-3">
                                            <div class="bg-success p-3 rounded-circle me-3 text-white">
                                                <i class="bi bi-cash-stack"></i>
                                            </div>
                                            <div>
                                                <h6 class="fw-normal text-muted mb-0">Valor Total</h6>
                                                <h4 class="mb-0">@string.Format("{0:C}", item.ValorTotal)</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                                <div class="row mt-2">
                                    <div class="col-4">
                                        <h6 class="text-muted">Valor Médio</h6>
                                        <p class="fw-bold">@string.Format("{0:C}", item.ValorMedio)</p>
                                    </div>
                                    <div class="col-4">
                                        <h6 class="text-muted">Maior Valor</h6>
                                        <p class="fw-bold">@string.Format("{0:C}", item.MaiorValor)</p>
                                    </div>
                                    <div class="col-4">
                                        <h6 class="text-muted">Menor Valor</h6>
                                        <p class="fw-bold">@string.Format("{0:C}", item.MenorValor)</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center">
            <p class="text-muted mb-0">Total de médicos: @Model.Count()</p>
            <div>
                <a asp-action="MedicosDestaque" class="btn btn-outline-primary">
                    <i class="bi bi-award"></i> Médicos em Destaque
                </a>
            </div>
        </div>
    </div>
</div>