@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Médicos em Destaque";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Médicos em Destaque</h2>
        <div>
            <button class="btn btn-outline-primary" onclick="window.print()">
                <i class="bi bi-printer"></i> Imprimir
            </button>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Médicos com Melhor Performance</h5>
        </div>
        <div class="card-body">
            <div class="alert alert-info mb-3">
                <i class="bi bi-info-circle"></i> Este relatório mostra os médicos <strong>ativos</strong> com pelo menos 1 consulta
                realizada e valor médio de consulta acima de R$ 150,00.
                <br>
                <small><strong>Consulta 3:</strong> Consulta com filtro principal (WHERE) e filtro do grupo (HAVING)</small>
            </div>

            @if (Model.Any())
            {
                <div class="row">
                    @{
                        var i = 1;
                        foreach (var item in Model)
                        {
                            <div class="col-lg-6 mb-4">
                                <div class="card border-primary h-100">
                                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                                        <h5 class="mb-0">#@i - @item.MedicoNome</h5>
                                        <span class="badge bg-light text-primary">@item.TotalConsultas consultas</span>
                                    </div>
                                    <div class="card-body">
                                        <p class="card-text mb-0">
                                            <i class="bi bi-hospital"></i> <strong>Especialidade:</strong> @item.Especialidade
                                        </p>
                                        <p class="card-text mt-2">
                                            <i class="bi bi-bar-chart-fill"></i> <strong>Valor médio:</strong>
                                            <span class="text-success">@string.Format("{0:C}", item.ValorMedio)</span>
                                        </p>
                                        <p class="card-text">
                                            <i class="bi bi-cash-coin"></i> <strong>Valor total:</strong>
                                            <span class="text-success">@string.Format("{0:C}", item.ValorTotal)</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            i++;
                        }
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle-fill"></i> Nenhum médico atende aos critérios do relatório.
                </div>
            }
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center">
            <p class="text-muted mb-0">Total de médicos em destaque: @Model.Count()</p>
            <div>
                <a asp-action="ConsultasPorPeriodo" class="btn btn-outline-primary">
                    <i class="bi bi-calendar-range"></i> Consultas por Período
                </a>
            </div>
        </div>
    </div>
</div>